#Task_1
#!/bin/bash
echo; echo "Нажмите клавишу и затем клавишу Return."
 read Keypress
  quit="quit"
while [ $Keypress != "$quit" ]
do
read Keypress
done
echo "Вы ввели команду quit, работа скрипта будет завершена"
